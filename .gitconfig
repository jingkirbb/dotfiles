[user]
  name = Dmitrii Abramov
  email = da@rheia.us
[github "user"]

[merge]
  tool = vimdiff

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = /usr/bin/vim
  autocrlf = input
  excludesfile = ~/.gitignore
